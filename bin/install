#!/usr/bin/env bash

# ARM package
wget http://www.cs.princeton.edu/~dsuo/flycapture.2.11.3.121-arm64-pkg.tgz

# AMD64 package
# wget http://www.cs.princeton.edu/~dsuo/flycapture2-2.11.3.121-amd64-pkg.tgz
tar zxvf flycapture*
pushd flycapture*

# Install dependencies (see FlyCapture2 README)
sudo apt-get install -y \
  libraw1394-11 \
  libgtkmm-2.4-dev \
  libglademm-2.4-dev \
  libgtkglextmm-x11-1.2-dev \
  libusb-1.0-0

sudo sh -c "echo raw1394 >> /etc/modules"

# Install FlyCapture 2
sudo sh install_flycapture.sh

# Clean up
popd
rm -rf flycapture*
